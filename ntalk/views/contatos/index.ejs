<% include ../header %>
<header class="row-fluid text-center">
	<h2>NTalk - Agenda de contatos</h2>
</header>
<section class="row-fluid">
	<section class="span12">
		<h4>
			<p>
			Nome: <%- usuario.nome%>
			<br>
			Email: <%- usuario.email%>
			</p>
		</h4>
		<form action="/contato" method="post" class="well form-inline">
			<input type="hidden" name="_csrf" value="<%- _csrf %>">
			<input type="text" name="contato[nome]" placeholder="Nome" class="input medium">
			<input type="text" name="contato[email]" placeholder="E-mail" class="input-medium">
			<button type="submit" class="btn btn-primary">Cadastrar</button>
		</form>
		<table class="table well">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th>Acao</th>
				</tr>
			</thead>
			<tbody>
				<% contatos.forEach(function(contato) { %>
					<tr>
						<td><%- contato.nome %></td>
						<td><%- contato.email %></td>
						<td>
							<span id="notify_<%- contato.email %>" class='label'>Offline</span>
						</td>
						<td>
							<a href="/contato/<%- contato._id %>" class="btn btn-info">Detalhes</a>
							<a href="/chat" id="chat_<%- contato.email %>" class="btn btn-inverse">Chat</a>
						</td>
					</tr>
				<% }) %>
			</tbody>
		</table>
	</section>
</section>
<% include notify_script %>
<% include ../exit %>
<% include ../footer %>